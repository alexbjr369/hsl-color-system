{
  "name": "hsl-color-system",
  "version": "0.0.1",
  "description": "HSL Color System",
  "author": "Alex Bleggi <alexbjr369@gmail.com>",
  "homepage": "https://alexbleggi.netlify.app",
  "repository": "https://github.com/alexbjr369/hsl-color-system.git",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/hsl-color-system/hsl-color-system.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "generate:stencil": "stencil generate",
    "test:stencil": "stencil test --spec --e2e",
    "watch:test:stencil": "stencil test --spec --e2e --watchAll",
    "watch:scss": "sass --no-source-map src/styles:styles --watch",
    "watch:stencil": "stencil build --docs-readme --watch",
    "watch:storybook": "start-storybook --port 6006 --no-manager-cache",
    "start:stencil": "stencil build --dev --watch --serve",
    "build:stencil": "stencil build --docs-readme",
    "build:storybook": "build-storybook",
    "start": "npm-run-all --parallel watch:scss watch:stencil watch:storybook",
    "build": "npm-run-all build:stencil build:storybook"
  },
  "dependencies": {
    "@stencil/core": "^2.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@stencil/sass": "^1.5.2",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/web-components": "^6.5.9",
    "@types/jest": "^28.1.6",
    "babel-loader": "^8.2.5",
    "jest": "^28.1.3",
    "jest-cli": "^28.1.3",
    "lit-html": "^2.2.6",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "^4.0.4",
    "puppeteer": "^15.4.0",
    "sass": "^1.53.0",
    "storybook-addon-designs": "^6.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^5.0.0"
  }
}
